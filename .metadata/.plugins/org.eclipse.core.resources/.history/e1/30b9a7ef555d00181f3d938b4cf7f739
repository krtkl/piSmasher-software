#include <stdio.h>
#include <stdint.h>

#include "spi.h"

#include "gs2971.h"
#include "sdi_rx.h"


#define SDI_RX_NCONFIGS			(1)

static struct gs2971_cfg sdi_rx_cfg_tab[SDI_RX_NCONFIGS] = {
	{
		.ss = 1,
		.spi_write = spi_write_reg16,
		.spi_read = spi_read_reg16
	}
};

static struct gs2971_dev sdi_rx;


static struct gs2971_cfg *sdi_rx_cfg_lookup(void)
{
	struct gs2971_cfg *cfg = NULL;
	int i;

	for (i = 0; i < SDI_RX_NCONFIGS; i++) {
		if (sdi_rx_cfg_tab[i].ss == 1) {
			cfg = &sdi_rx_cfg_tab[i];
			break;
		}
	}

	return cfg;
}



int sdi_rx_init(void)
{
	struct gs2971_cfg *cfg;

	cfg = sdi_rx_cfg_lookup();
	if (cfg == NULL)
		return (-99);

	return gs2971_init(&sdi_rx, cfg);
}




#ifndef __AXISSW_H
#define __AXISSW_H


/**
 * @brief	AXIS Switch Regs
 */

typedef enum _AxisSw_Regs {
	AXISSW_CTRL = 0x00,		/**< Control register */
	AXISSW_MI00 = 0x40,
	AXISSW_MI01 = 0x44,
	AXISSW_MI02 = 0x48,
	AXISSW_MI03 = 0x4c,
	AXISSW_MI04 = 0x50,
	AXISSW_MI05 = 0x54,
	AXISSW_MI06 = 0x58,
	AXISSW_MI07 = 0x5c,
	AXISSW_MI08 = 0x60,
	AXISSW_MI09 = 0x64,
	AXISSW_MI10 = 0x68,
	AXISSW_MI11 = 0x6c,
	AXISSW_MI12 = 0x70,
	AXISSW_MI13 = 0x74,
	AXISSW_MI14 = 0x78,
	AXISSW_MI15 = 0x7c,
} AxisSw_Regs;


/**
 * @brief	AXIS Switch MUX Input Selection Enumeration
 */
typedef enum _AxisSw_MuxIn {
	AXISSW_SI00 = 0x00,
	AXISSW_SI01 = 0x01,
	AXISSW_SI02 = 0x02,
	AXISSW_SI03 = 0x03,
	AXISSW_SI04 = 0x04,
	AXISSW_SI05 = 0x05,
	AXISSW_SI06 = 0x06,
	AXISSW_SI07 = 0x07,
	AXISSW_SI08 = 0x08,
	AXISSW_SI09 = 0x09,
	AXISSW_SI10 = 0x0a,
	AXISSW_SI11 = 0x0b,
	AXISSW_SI12 = 0x0c,
	AXISSW_SI13 = 0x0d,
	AXISSW_SI14 = 0x0e,
	AXISSW_SI15 = 0x0f
} AxisSw_MuxIn;

#define AXISSW_MUX_DISABLE		(1 << 31)

/**
 * @brief	AXIS Switch Device Structure
 */
typedef struct _AxisSw {
	void *base;
} AxisSw;


int axissw_init(AxisSw *sw);
int axissw_port_config(AxisSw *sw, int port, AxisSw_MuxIn cfg);
int axissw_update(AxisSw *sw);


#endif /* __AXISSW_H */

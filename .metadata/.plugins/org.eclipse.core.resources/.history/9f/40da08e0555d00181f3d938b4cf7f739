#ifndef __STREAM_CTRL_H
#define __STREAM_CTRL_H

#define STRM_CTRL_CLK_SEL_MASK			(1 << 4)

enum strm_ctrl_clk_sel {
	STRM_CTRL_CLK_SEL_HDMI = 0x00,
	STRM_CTRL_CLK_SEL_SDI = 0x10
};

#define STRM_CTRL_HDMI_EN			(1 << 3)
#define STRM_CTRL_HDMI_3G_EN			(1 << 2)
#define STRM_CTRL_SDI_EN			(1 << 1)
#define STRM_CTRL_SDI_3G_EN			(1 << 0)

struct strm_ctrl_dev {
	uint8_t		cfg;
};


int strm_ctrl_init(void);

#endif /* __STREAM_CTRL_H */

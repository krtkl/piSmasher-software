#include <stdio.h>
#include <unistd.h>

#include "axissw.h"

static AxisSw_MuxIn port_cfg[2];

int
main(int argc, char *argv[])
{
	int i, c, ret;
	int acfg = 0;
	int bcfg = 0;
	AxisSw *sw;

	while ((c = getopt(argc, argv, "ab")) != -1) {
		switch (c) {
		case 'a': acfg = 1; break;
		case 'b': bcfg = 1; break;
		default:
			printf("Unknown option character `\\x%x'.\n", optopt);
			return -1;
		}
	}

	if (acfg && bcfg) {
		printf("Select either A or B routing\n");
		return -1;
	}

	sw = malloc(sizeof(AxisSw));
	if (!sw)
		return -9;

	ret = axissw_init(sw);
	if (ret < 0)
		goto out;

	/* This part depends on the configuration */
	if (acfg) {
		port_cfg[0] = AXISSW_SI00;
		port_cfg[1] = AXISSW_SI01;
	} else {
		port_cfg[0] = AXISSW_SI00;
		port_cfg[1] = AXISSW_SI01;
	}

	/* Set the configuration for each port */
	for (i = 0; i < 2; i++) {
		ret = axissw_port_config(sw, i, port_cfg[i]);
		if (ret < 0)
			goto out;
	}

out:
	free(sw);
	return ret;
}

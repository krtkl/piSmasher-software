#include <sys/mman.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <stdbool.h>
#include <fcntl.h>

#include "axissw.h"

#define REG_READ(__BASE__, __OFFSET__)					\
		*((volatile unsigned long *)((__BASE__) + (__OFFSET__)))

#define REG_WRITE(__BASE__, __OFFSET__, __DATA__)				\
		*((volatile unsigned long *)(((uint8_t *)(__BASE__)) + (__OFFSET__))) = (__DATA__)


#define AXISSW_CTRL_UPDATE		(1 << 1)	/**< Commit/update bit */



#define AXISSW_MUX_IN_MASK		(0x0000000FU)


/**
 * @brief	Update the Switch Configuration
 */
int
axissw_update(AxisSw *sw)
{
	REG_WRITE(sw->base, AXISSW_CTRL, AXISSW_CTRL_UPDATE);

	return 0;
}

int
axissw_port_enable(AxisSw *sw, int port, bool en)
{
	unsigned long reg, reg_val;

	reg = (unsigned long)AXISSW_MI00 + (port * 4);

	reg_val = REG_READ(sw->base, reg);

	printf("Port %d is %s\n", port, reg_val & AXISSW_MUX_DISABLE ? "disabled" : "enabled");

	if (en)
		reg_val &= ~(AXISSW_MUX_DISABLE);
	else
		reg_val |= AXISSW_MUX_DISABLE;

	REG_WRITE(sw->base, reg, reg_val);

	return 0;
}

int
axissw_port_config(AxisSw *sw, int port, AxisSw_MuxIn cfg)
{
	unsigned long reg;

	reg = (unsigned long)AXISSW_MI00 + (port * 4);

	printf("Configuring port %d (%lx) for input %lu\n", port, reg, (unsigned long)cfg);

	REG_WRITE(sw->base, reg, (unsigned long)cfg);

	return 0;
}

int
axissw_init(AxisSw *sw)
{
	int fd, ret;
	void *base;

	if (sw == NULL)
		return -1;

	fd = open("/dev/uio0", O_RDWR);
	if (fd < 0)
		return fd;

	base = mmap(NULL, 0x10000, PROT_READ | PROT_WRITE, MAP_SHARED, fd, 0);
	if (base == MAP_FAILED) {
		ret = -2;
		goto out;
	}

	sw->base = base;
	sw->fd = fd;

out:
	return ret;
}

#include <sys/mman.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <unistd.h>
#include <fcntl.h>

#include "stream_ctrl.h"

#define STRM_CTRL_ADDR_SIZE		(0x10000U)

struct strm_ctrl_dev *strm_ctrl;

int strm_ctrl_init(void)
{
	int fd;
	void *iomem;

	fd = open("/dev/uio0", O_RDWR | O_SYNC);
	if (fd < 0)
		return fd;

	/* Map the memory */
	iomem = mmap(NULL,
			STRM_CTRL_ADDR_SIZE,
			PROT_READ | PROT_WRITE,
			MAP_SHARED,
			fd,
			0);

	if (iomem == MAP_FAILED) {
		close(fd);
		return EXIT_FAILURE;
	}

	/* Cast to usable type */
	strm_ctrl = (struct strm_ctrl_dev *)iomem;

	strm_ctrl->cfg = STRM_CTRL_CLK_SEL_HDMI |
				STRM_CTRL_HDMI_EN |
				STRM_CTRL_HDMI_3G_EN |
				STRM_CTRL_SDI_EN |
				STRM_CTRL_SDI_3G_EN;

	return EXIT_SUCCESS;
}








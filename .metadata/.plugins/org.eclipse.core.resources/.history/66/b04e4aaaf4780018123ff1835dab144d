/**
 * @brief	TDA998X device
 */
struct tda998x_dev {
	int				id;
	struct tda998x_cfg		*cfg;
	uint8_t				features;
	uint16_t			version;
	enum tda998x_sink		sink;
	enum tda998x_sink		edid_sink;
	enum tda998x_edid_state		edid_state;
};

int tda998x_init(struct tda998x_dev *dev);
int tda998x_set_inout(void);
/**
 * @}
 */

#ifdef __cplusplus
}
#endif

#endif /* __TDA998X_H */

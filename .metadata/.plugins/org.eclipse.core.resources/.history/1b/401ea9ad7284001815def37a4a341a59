#ifndef __LIBUIO_H
#define __LIBUIO_H


#define UIO_MAP_READ32(__BASE__, __OFFSET__)					\
		*((volatile unsigned long *)((__BASE__) + (__OFFSET__)))

#define UIO_MAP_WRITE32(__BASE__, __OFFSET__, __DATA__)				\
		*((volatile unsigned long *)((__BASE__) + (__OFFSET__))) = (__VAL__)






#ifndef __TDA998X_H
#define __TDA998X_H

#ifdef __cplusplus
extern "C" {
#endif

/**
 * @addtogroup	NXP_TDA998X
 * @{
 */

/**
 * @brief	TDA998X driver configuration
 */
struct tda998x_cfg {
	uint8_t				id;
	uint16_t			hdmi_addr;
	uint16_t			cec_addr;
	int (*i2c_write)		(uint16_t addr, uint8_t reg, uint8_t *data);
	int (*i2c_read)			(uint16_t addr, uint8_t reg, uint8_t *data);
	uint8_t				cur_page;
};


